<!DOCTYPE html>
<html>
<head>
  <title>Lists</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="user_nav" style="text-align:center">
  <% if current_user %>
    Logged in as <%= current_user.username %> | 
    <%= link_to "Log Out", log_out_path %> |
  <% else %>
    <%= link_to "Log In", log_in_path %> or 
    <%= link_to "Sign Up", sign_up_path %>
  <% end %>  
<%= link_to 'Your Lists', lists_path if current_user %>

<h1 style="text-align:center">Lists</h1>

<% flash.each do |name, msg| %>
  <h4 style="color:red"><%= content_tag :div, msg, id: "flash_#{name}" %></h4>
<% end %>
</div>

<%= yield %>

</body>
</html>
