<h3><%= @list.list_name.capitalize %></h3>

<ol>
  <% @list.items.each do |item| %>
    <li><%= item.name.capitalize %>
      <%= " - #{item.quan.capitalize}" unless item.quan.blank? %>
      <%= " - #{item.notes.capitalize}" unless item.notes.blank? %>
    </li>
<% end %>
</ol>
<% unless @list.notes.blank? %>
<p>
  <strong>Notes: </strong><%= @list.notes.capitalize %>
</p>
<% end %>

<h4><%= link_to 'Edit this list', edit_list_path %> | <%= link_to 'Delete', @list , method: :delete, data: { confirm: 'Are you sure you want to remove this list?'} %></h4>